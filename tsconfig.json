{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDirs": ["./src", "./prisma"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@prisma/*": ["prisma/*"]
    }
  },
  "include": ["./src/**/*", "./prisma/**/*.ts"],
  "exclude": ["node_modules"]
}
